<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/activity_registration2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.haidangdam.watershed.controller.RegistrationActivity">>>
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_text_view"
        tools:text="@string/password_text_field"
        android:layout_below="@+id/username_text_view"
        android:layout_alignRight="@+id/username_text_view"
        android:layout_alignEnd="@+id/username_text_view"
        android:layout_marginTop="23dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_text_view"
        tools:text="@string/user_name_text_field"
        android:layout_marginBottom="54dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/email_edit_text_registration"
        android:layout_alignLeft="@+id/registration_button"
        android:layout_alignStart="@+id/registration_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_edit_text_registration"
        android:contentDescription="password"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/password_text_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_edit_text_registration"
        android:contentDescription="Email"
        android:layout_marginTop="101dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/password_edit_text_registration"
        android:layout_alignStart="@+id/password_edit_text_registration" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/registration_button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/password_edit_text_registration"
        android:layout_alignStart="@+id/password_edit_text_registration"
        android:layout_marginBottom="88dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerRegistration"
        android:layout_below="@+id/password_edit_text_registration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />
</RelativeLayout>
